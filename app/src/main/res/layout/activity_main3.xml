<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="395dp"
        android:layout_height="851dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/signin" />

    <EditText
        android:id="@+id/username"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        style="@style/NoUnderlineEditText"
        android:layout_alignStart="@id/imageView3"
        android:layout_alignEnd="@id/imageView3"
        android:layout_marginStart="67dp"
        android:layout_marginTop="493dp"
        android:layout_marginEnd="74dp" />

    <EditText
        android:id="@+id/usermail"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        style="@style/NoUnderlineEditText"
        android:layout_alignStart="@id/imageView3"
        android:layout_alignEnd="@id/imageView3"
        android:layout_marginStart="66dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="84dp"
         />

    <EditText
        android:id="@+id/userpass"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        style="@style/NoUnderlineEditText"
        android:layout_alignStart="@id/imageView3"
        android:layout_marginStart="66dp"
        android:layout_marginTop="667dp"
         />

    <Button
        android:id="@+id/usersignup"
        android:layout_width="40dp"
        android:layout_height="61dp"
        android:layout_marginTop="740dp"
        android:layout_alignStart="@id/imageView3"
        android:layout_alignEnd="@id/imageView3"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="70dp"

        android:backgroundTint="#FF9800"
        android:text="SIGN UP" />
</RelativeLayout>
